<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper 
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.domi.mapper.BannerMapper">

	<insert id="insert" parameterType="Banner" useGeneratedKeys="true" keyProperty="id">
		<![CDATA[
			insert into banner(url, imgUrl, orderNo,type,background) values (#{url}, #{imgUrl}, #{orderNo},#{type},#{background})
		]]>
	</insert>
	
	<update id="update" parameterType="Banner">
		<![CDATA[
			update banner set url=#{url}, imgUrl=#{imgUrl}, orderNo=#{orderNo} where id=#{id}
		]]>
	</update>
	
	<select id="queryAll" resultType="Banner">
		<![CDATA[
			select * from banner
		]]>
	</select>
	
	<select id="query" parameterType="Integer" resultType="Banner">
		<![CDATA[
			select * from banner where id=#{id}
		]]>
	</select>
	
	<delete id="delete" parameterType="Integer">
		<![CDATA[
			delete from banner where id=#{id}
		]]>
	</delete>
	
	<select id="queryListByParam" parameterType="Integer" resultType="Banner">
		select * from banner where type=#{type} order by orderNo desc
	</select>

	<select id="getNewBanner"  resultType="Banner">
		select * from banner
	</select>
</mapper>